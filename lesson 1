#include <Servo.h>

Servo lockServo ; 
Servo armServo ; 
Servo trayServo ; 
Servo baseServo ; 

#define lockOpen    110 
#define lockClosed  20 

#define armOpen     140 
#define armArmed    45

#define trayClosed  177
#define trayOpened  172





void rest() {
  
  sweep(lockServo,lockServo.read(),lockOpen,15) ; 
  sweep(armServo,armServo.read(),armOpen,5) ; 
 
}

void prepareToShoot() {

  sweep(lockServo,lockServo.read(),lockClosed,15) ; 
  sweep(armServo,armServo.read(),armArmed,5) ; 
  
}

void shoot() {

  sweep(lockServo,lockServo.read(),lockOpen,15) ; 
  
}


void sweep ( Servo servo , int from , int to , int speed  ) {

  int pos = 0 ;

  if (from < to) {

    for (pos = from; pos <= to; pos += 1) { 
      servo.write(pos);              
      delay(speed);                       
    }
    
  } else {

    for (pos = from; pos >= to; pos -= 1) { 
      servo.write(pos);              
      delay(speed);                       
    }

    
  }


}


void trayClose(){
  sweep(trayServo,trayServo.read(),trayClosed,22) ; 
}

void trayOpen() {
  sweep(trayServo,trayServo.read(),trayOpened,22) ; 
}

void trayRelease() {

    trayClose() ; 
    trayOpen() ; 
    trayClose() ; 
    delay(2000);
}
void baseMove(int jd) {
  
  sweep(baseServo,baseServo.read(),jd,15);
}



void setup() {
Serial.begin(9600);
  /// connect servo motors

  lockServo.attach(3); 
  armServo.attach(5) ; 
  trayServo.attach(6);
  baseServo.attach(9) ;  
 Serial.begin(9600);
    Serial.println(baseServo.read());
  Serial.println("I've pritened the baseServo position");
    Serial.println(trayServo.read());
  Serial.println("I've pritened the trayServo position");  
  Serial.println(armServo.read());
  Serial.println("I've pritened the armServo position");
    Serial.println(lockServo.read());
  Serial.println("I've pritened the lockServo position");
sweep(baseServo,0,180,15);
sweep(lockServo,0,180,15);
sweep(armServo,0,180,15);
sweep(trayServo,0,180,15);

  trayClose();   
  delay(250); /// you have time to load bullets
  trayRelease(); 
   Serial.begin(9600);
    Serial.println("Start");

  
  
  rest() ; 
  prepareToShoot() ;  
  shoot(); 
  rest(); 
 Serial.begin(9600);
    Serial.println("Going to loop");
}

void loop() {
  int lock;
  int arm;
  int basa;
  lock=Serial.parseInt();
  arm=Serial.parseInt();
 basa=Serial.parseInt();
 Serial.println("Have red lock, arm, basa");
 Serial.print(lock);
 Serial.print(arm);
 Serial.print(basa);
     machine_controler(lock,arm,basa);
}

void machine_controler(int basa,)
{baseMove(basa);///This is my magic!!
   trayRelease(); 
  rest() ; 
  prepareToShoot() ;  
  shoot(); 
  rest();
    Serial.println("tray is moving");
       Serial.println(trayServo.read());
  Serial.println("I've pritened the trayServo position");
    baseMove(90);///This is my magic!!
   trayRelease(); 
  rest() ; 
    Serial.println("base is moving");
       Serial.println(baseServo.read());
  Serial.println("I've pritened the baseServo position");
  prepareToShoot() ;  
  shoot(); 
  rest();  
    Serial.println("arm is moving");
       Serial.println(armServo.read());
  Serial.println("I've pritened the armServo position");
  baseMove(120);///This is my magic!!
   trayRelease(); 
  rest() ; 
  Serial.begin(9600);
    Serial.println("base is moving again");
       Serial.println(baseServo.read());
  Serial.println("I've pritened the baseServo position");
  prepareToShoot() ;  
  shoot(); 
  rest();
  Serial.begin(9600);
  Serial.println("Over");
}
 
 
